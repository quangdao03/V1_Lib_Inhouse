<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="16dp"
        android:paddingVertical="20dp"
        android:background="@drawable/bg_dialog_border_24"
        android:paddingHorizontal="16dp">

        <com.kt.lib_ads_inhouse.a8_app_utils.customtext.CustomTextViewFont700_notosan
            android:id="@+id/tv_title"
            style="@style/CustomText_color_02343F_20"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/do_you_like_this_app"
            app:layout_constraintEnd_toStartOf="@id/iv_close"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/icon_close"
            android:padding="4dp"
            android:src="@drawable/ic_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_title"
            app:layout_constraintTop_toTopOf="@id/tv_title"
            app:layout_constraintBottom_toBottomOf="@id/tv_title"/>


        <com.kt.lib_ads_inhouse.a8_app_utils.customtext.CustomTextViewFont400_notosan
            android:id="@+id/tv_content"
            style="@style/CustomText_color_02343F_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/let_us_know_your_experience_5_stars_is_the_best_on_google_play"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <RatingBar
            android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:numStars="5"
            android:progressBackgroundTint="@color/color_4D02343F"
            android:progressTint="@color/color_02343F"
            android:rating="4"
            android:secondaryProgressTint="@color/color_02343F"
            android:stepSize="1.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_content" />

        <com.kt.lib_ads_inhouse.a8_app_utils.customtext.CustomTextViewFont600_notosan
            android:id="@+id/tv_cancel"
            style="@style/CustomText_color_02343F_16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_btn_border_16"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:text="@string/cancel"
            app:layout_constraintEnd_toStartOf="@id/tv_submit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rating_bar" />

        <com.kt.lib_ads_inhouse.a8_app_utils.customtext.CustomTextViewFont600_notosan
            android:id="@+id/tv_submit"
            style="@style/CustomText_White_16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"

            android:background="@drawable/bg_btn_border_16"
            android:backgroundTint="@color/color_02343F"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:text="@string/submit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_cancel"
            app:layout_constraintTop_toBottomOf="@id/rating_bar" />

        <com.kt.lib_ads_inhouse.a8_app_utils.customtext.CustomTextViewFont600_notosan
            android:id="@+id/tv_gotit"
            style="@style/CustomText_White_16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_btn_border_16"
            android:backgroundTint="@color/color_02343F"
            android:gravity="center"
            android:paddingHorizontal="45dp"
            android:paddingVertical="10dp"
            android:text="@string/got_it"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>