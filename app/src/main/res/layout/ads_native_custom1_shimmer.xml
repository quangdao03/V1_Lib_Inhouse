<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="4dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    tools:ignore="MissingConstraints">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ads_native_custom_bg">

        <!-- Placeholder for MediaView -->
        <View
            android:id="@+id/media_shimmer"
            android:layout_width="200dp"
            android:layout_height="180dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Placeholder for Icon TextView -->
        <View

            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/shimmer_call_to_action"
            app:layout_constraintStart_toEndOf="@id/media_shimmer" />

        <!-- Placeholder for Headline TextView -->
        <View
            android:id="@+id/headline_shimmer"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_marginStart="9dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/media_shimmer"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- Placeholder for Body TextView -->
        <View
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/media_shimmer"
            app:layout_constraintTop_toBottomOf="@id/headline_shimmer" />

        <!-- Placeholder for Call to Action Button -->
        <View
            android:id="@+id/shimmer_call_to_action"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/media_shimmer" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>
