<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLanguage"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/bg_item_language_off">

    <ImageView
        android:id="@+id/iv_language"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginVertical="12dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_language_en"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.kt.lib_ads_inhouse.a8_app_utils.customtext.CustomTextViewFont400_notosan
        android:id="@+id/tv_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="18.5dp"
        android:layout_marginStart="16dp"
        android:text="@string/english"
        style="@style/CustomText_color_02343F_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_language"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>