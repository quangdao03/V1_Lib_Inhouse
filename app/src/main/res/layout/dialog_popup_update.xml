<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="33dp"
    android:background="@drawable/bg_dialog_border_24"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.kt.lib_ads_inhouse.a8_app_utils.customtext.CustomTextViewFont600_notosan
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/update_requirements"
        style="@style/CustomText_color_2E3338_16"
        />
    <com.kt.lib_ads_inhouse.a8_app_utils.customtext.CustomTextViewFont400_notosan
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/CustomText_color_66727E_14"
        android:text="@string/we_have_new_update_please_update_to_latest_version"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <com.kt.lib_ads_inhouse.a8_app_utils.customtext.CustomTextViewFont400_notosan
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:paddingVertical="16dp"
            android:layout_height="wrap_content"
            style="@style/CustomText_color_2E3338_16"
            android:text="@string/later"/>
        <com.kt.lib_ads_inhouse.a8_app_utils.customtext.CustomTextViewFont600_notosan
            android:background="@drawable/bg_btn_border_16"
            android:backgroundTint="@color/color_02343F"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingVertical="16dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            style="@style/CustomText_White_16"
            app:layout_constraintTop_toBottomOf="@+id/tv_content"

            android:text="@string/update_now"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>